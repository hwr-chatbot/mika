{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"target": "ES2021",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"composite": true,
		"outDir": "dist",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"references": [{ "path": "../shared" }]
}
